<Window x:Class="ExamDispatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exam Dispatcher" Height="580" Width="920"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        d:DesignHeight="300"
        d:DesignWidth="300"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <DockPanel Width="100"
                   DockPanel.Dock="Left"
                   LastChildFill="True"
                   Margin="10">
            <Label DockPanel.Dock="Top">Exams</Label>
            <Button Content="Change Folder" DockPanel.Dock="Bottom"/>
            <Button Content="Create Exam" DockPanel.Dock="Bottom"/>
            <ListBox Name="ExamListBox" ItemsSource="{Binding Exams}" Width="100" DockPanel.Dock="Top">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Label Content="{Binding ExamTitle}" ></Label>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>

        <ContentControl Content="{Binding CurrentViewModel}" />

    </DockPanel>
</Window>
